{
  "name": "sample-ts-project",
  "version": "1.0.0",
  "description": "A sample NPM project written in TypeScript.",
  "main": "./dist/node/index.js",
  "browser": {
    "./dist/node/index.js": "./dist/browser/index.js"
  },
  "scripts": {
    "clean": "rimraf ./dist ./coverage",
    "prebuild": "npm run lint",
    "build": "npm run build-node && npm run build-browser",
    "build-node": "tsc",
    "build-browser": "tsc --project tsconfig-browser.json",
    "build-test": "tsc --project tsconfig-test.json",
    "start": "node ./dist/node/index",
    "lint": "tslint --config tslint.json --project tsconfig-test.json",
    "pretest": "npm run lint",
    "test": "mocha ./test/unit/**/*.ts",
    "pretest-integ": "npm run lint",
    "test-integ": "mocha ./test/integration/**/*.ts",
    "prepublish": "in-publish && npm prune && npm run test && npm run test-integ && npm run build || npm run build",
    "precover": "npm run lint",
    "cover": "nyc --report-dir=./coverage/unit mocha ./test/unit/**/*.ts",
    "postcover": "opener ./coverage/unit/lcov-report/index.html",
    "precover-integ": "npm run lint",
    "cover-integ": "nyc --report-dir=./coverage/integration mocha ./test/integration/**/*.ts",
    "postcover-integ": "opener ./coverage/integration/lcov-report/index.html"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ncochard/sample-ts-project.git"
  },
  "author": "Niolas Cochard",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/es6-promise": "0.0.32",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.45",
    "chai": "^3.5.0",
    "ghooks": "^1.3.2",
    "in-publish": "^2.0.0",
    "mocha": "^3.1.2",
    "nyc": "^8.3.1",
    "opener": "^1.4.2",
    "rimraf": "^2.5.4",
    "source-map-support": "^0.4.5",
    "ts-node": "^1.6.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  },
  "engines": {
    "node": ">=4.0.0"
  }
}
